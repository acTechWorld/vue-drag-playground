{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "declaration": true, // Generate .d.ts files
    "declarationMap": false, // Disable source maps for .d.ts files
    "outDir": "dist", // Output directory for the build
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "lib": ["dom", "esnext"],
    "incremental": false // Disable incremental compilation to stop .tsbuildinfo
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
